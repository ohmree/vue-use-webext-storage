{
  "extends": ["@antfu", "prettier"],
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "semi": ["error", "always"],
        "@typescript-eslint/semi": ["error", "always"],
        "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
        "@typescript-eslint/no-unused-vars": [
          "error",
          { "argsIgnorePattern": "^_" }
        ]
      }
    }
  ]
}
